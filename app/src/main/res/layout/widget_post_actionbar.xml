<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/post_action_bar_padding"
    android:weightSum="3">

    <TextView
        style="@style/TextViewCounter"
        android:id="@+id/post_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:drawableTop="@drawable/selector_ic_like"
        tools:text="200k"/>

    <TextView
        style="@style/TextViewCounter"
        android:id="@+id/post_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_comment_black"
        tools:text="42k"/>

    <TextView
        style="@style/TextViewCounter"
        android:id="@+id/post_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_share_black" />

</LinearLayout>