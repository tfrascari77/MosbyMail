<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewSplashTitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_size_splash_title</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="TextViewLoginNoAccount">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/login_no_account</item>
    </style>

    <style name="EditTextBase">
        <item name="met_floatingLabel">highlight</item>
        <item name="met_singleLineEllipsis">true</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="EditTextUsername" parent="EditTextBase">
        <item name="met_iconLeft">@mipmap/ic_person_black</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/username</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="EditTextPassword" parent="EditTextBase">
        <item name="met_iconLeft">@mipmap/ic_lock_black</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:hint">@string/password</item>
    </style>

    <style name="EditTextDisplayName" parent="EditTextBase">
        <item name="met_iconLeft">@mipmap/ic_mood_black</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:hint">@string/display_name</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="ActionButtonBase">
        <item name="pb_colorComplete">@color/green_complete</item>
        <item name="pb_colorNormal">@color/colorAccent</item>
        <item name="pb_colorPressed">@color/colorAccentDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="pb_textComplete">@string/success</item>
        <item name="pb_textProgress">@string/loading</item>
    </style>

    <style name="ButtonLoginSubmit" parent="ActionButtonBase">
        <item name="android:text">@string/login</item>
    </style>

    <style name="FABHome">
        <item name="fabSize">normal</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:src">@mipmap/ic_party_mode_white</item>
    </style>

    <style name="TextViewCounter">
        <item name="android:textSize">@dimen/font_size_xxsmall</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextCreatePost" parent="EditTextBase">
        <item name="android:maxLines">@integer/create_post_title_max_lines</item>
        <item name="android:hint">@string/title</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ButtonCreatePostSubmit" parent="ActionButtonBase">
        <item name="android:text">@string/create_post</item>
    </style>

    <style name="CardBase">
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:padding">@dimen/card_padding</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="TextViewBase">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewTimestamp" parent="TextViewBase">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewAuthor" parent="TextViewBase">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="TextViewTitle" parent="TextViewBase">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="TextViewParagraph" parent="TextViewBase">
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="EditTextComment">
        <item name="met_floatingLabel">none</item>
        <item name="met_singleLineEllipsis">true</item>
        <item name="met_maxCharacters">@integer/comment_max_length</item>
        <item name="met_hideUnderline">true</item>
        <item name="android:hint">@string/type_your_comment</item>
        <item name="android:paddingLeft">@dimen/comment_input_padding</item>
        <item name="android:paddingRight">@dimen/comment_input_padding</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="ImageViewSendComment">
        <item name="android:padding">@dimen/comment_send_button_padding</item>
        <item name="android:src">@drawable/selector_ic_send</item>
        <item name="android:contentDescription">@string/content_description_send_comment</item>
    </style>

    <style name="ProgressBarIndeterminate" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="TextViewError" parent="TextViewBase">
        <item name="android:textColor">@color/red_error</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>


</resources>
